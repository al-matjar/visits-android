<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hypertrack.logistics.android.github">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name="com.hypertrack.android.utils.MyApplication"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:launchMode="singleTask"
            android:name="com.hypertrack.android.ui.SplashScreen"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Branch URI Scheme -->
            <intent-filter>
                <data android:scheme="hypertrack-logistics" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>

            <!-- Branch App Links (optional) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" android:host="hypertrack-logistics.app.link" />
                <data android:scheme="https" android:host="hypertrack-logistics.app.link" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.hypertrack.android.ui.CheckInActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name="com.hypertrack.android.ui.ListActivity"
             android:windowSoftInputMode="stateAlwaysHidden" />

        <activity android:name="com.hypertrack.android.ui.JobDetailActivity"
            android:parentActivityName="com.hypertrack.android.ui.ListActivity"
            />


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="@string/file_provider_authority"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>


        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/channel_id" />

        <meta-data android:name="io.branch.sdk.BranchKey" android:value="@string/branch_io_api_key" />

    </application>
</manifest>
